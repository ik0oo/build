mixin setScripts(scripts)
    each src in scripts
        - var isExternalScript = /^(?:https?\:)?\/\//i;
        - src = isExternalScript.test(src) ? src : 'assets/js/' + src;
        script(src=src)


mixin scripts()
    +setScripts(['../js/jquery/jquery.min.js', '../js/owlcarousel/owl.carousel.min.js', 'app.js'])